#!/usr/bin/env bash
# Installs nginx web server and redirect to my linkedin page

301_REDIRECT="\\\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"

apt-get update
apt-get install -y nginx
echo "Hello World!" > /var/www/html/index.html
sudo sed -i "30i $301_REDIRECT" /etc/nginx/sites-available/default
sudo service nginx restart
